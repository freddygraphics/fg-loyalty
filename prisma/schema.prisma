generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TxType {
  EARN
  REDEEM
  ADJUST
}

enum PlanType {
  STARTER
  PRO
  MULTI
}

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  PAST_DUE
  CANCELED
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String

  businesses Business[] @relation("BusinessOwner")

  transactions PointTransaction[]

  createdAt DateTime @default(now())
}

model PlatformAdmin {
  id        String   @id @default(cuid())
  email     String   @unique
  role      String
  createdAt DateTime @default(now())
}

model Business {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique

  plan      PlanType @default(STARTER)
  status    SubscriptionStatus @default(TRIALING)
  trialEndsAt DateTime?

  goal      Int @default(10)

  earnStep  Int @default(1)              // ðŸ‘ˆ cada scan suma esto
  limitMode String @default("cap")       // cap | unlimited
  redeemMode String @default("subtract") // subtract | reset

  active    Boolean  @default(true)

  ownerId   String
  owner     User     @relation("BusinessOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  customers Customer[]
  cards     LoyaltyCard[]
  transactions PointTransaction[]

  createdAt DateTime @default(now())

  @@index([ownerId])
}



model Customer {
  id         String  @id @default(cuid())
  businessId String
  name       String
  phone      String
  email      String?

  business Business      @relation(fields: [businessId], references: [id], onDelete: Cascade)
  cards    LoyaltyCard[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([businessId, phone])
  @@index([businessId])
}

model LoyaltyCard {
  id         String @id @default(cuid())
  token      String @unique @default(cuid()) // ðŸ‘ˆ AGREGAR ESTO
  businessId String
  customerId String
  points     Int    @default(0)
lastScanAt DateTime?

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  transactions PointTransaction[]

  createdAt DateTime @default(now())

  @@unique([businessId, customerId])
  @@index([businessId])
  @@index([customerId])
}


model PointTransaction {
  id         String  @id @default(cuid())
  businessId String
  cardId     String
  userId     String?

  type   TxType
  points Int
  note   String?

  business Business    @relation(fields: [businessId], references: [id], onDelete: Cascade)
  card     LoyaltyCard @relation(fields: [cardId], references: [id], onDelete: Cascade)
  user     User?       @relation(fields: [userId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([businessId])
  @@index([cardId])
  @@index([userId])
}
